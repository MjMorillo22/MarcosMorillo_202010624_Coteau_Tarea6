        android:id="@+id/about_contact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email: morillomarcos89@gmail.com"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/about_phone"
